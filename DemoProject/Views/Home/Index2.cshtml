<script>
    $(document).ready(function () {
    $("#mobileName").keyup(function () {
        var name = $("#mobileName").val();


        $.ajax(

            {
                url: "/Home/Search",
                type: "Get",
                dataType: "JSON",
                contentType: "application/json",
                data: { "mobileName": name },

                success: function (data) { 
                    
                    if (data == null) {
                        document.getElementById("Error").innerText ="Oops Some Internal Error";
                    }
                    else {
                        if (data.length == 0) {
                           // alert("No Data");
                            document.getElementById("MobileGroup").innerHTML = "";
                            document.getElementById("Error").innerText = "No Results Found";

                        }
                        else {
                             document.getElementById("Error").innerText = "";
                            document.getElementById("MobileGroup").innerHTML = "";
                            data.forEach((item)=>{
                                
                                var photoPath = "/images/" +item.photopath;
                               
                                var mob = "<div class='col-lg-3 pb-5'> <div class='card ho w-75'> <div class='view-overlay'> <img class='card-img-top acard' src='"+photoPath+"' alt='card img cap' /> <div class='mask rgba-white-slight'></div></div><div class='card-body bg-light'><h4 class='card-title'> "+item.mobileName+" </h4><p class='card-text'> "+item.price+" </p><a href='' class='btn blue-gradient' ><b>Book Now</b></a></div></div> <input type='hidden' value=" + item.catogery + "/></div>";
                                 $("#MobileGroup").append(mob);
                                
                            });
                           
                                
                   
                   
                               
                            
                        }
                    }
                },
                error: function () {
                    alert("Data Not Found");
                }
            }
        );


    });


});


</script>

